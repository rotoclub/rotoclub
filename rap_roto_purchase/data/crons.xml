<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Cron to change the state of a purchase -->
    <record id="ir_cron_change_state_draft_to_purchase" model="ir.cron">
        <field name="name">Send Purchase Orders Auto</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="code">model._send_auto_purchase_orders()</field>
        <field name="state">code</field>
    </record>

    <!-- Temporary Cron to change the prices -->
    <record id="ir_cron_change_prices_in_supplier" model="ir.cron">
        <field name="name">Change prices in supplier</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="product.model_product_supplierinfo"/>
        <field name="code">model._action_recalculate_prices()</field>
        <field name="state">code</field>
    </record>

</odoo>
