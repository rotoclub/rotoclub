<odoo>
    <data>
        <!-- Product Deletion Wizard -->
        <record model="ir.ui.view" id="product_deletion_form_wizard">
            <field name="name">product.deletion.wizard</field>
            <field name="model">product.deletion.wizard</field>
            <field name="arch" type="xml">
                <form string="Delete Product" >
                    <footer>
                        <button type="object" name="archive_product_template" string="Archive" class="oe_highlight"/>
                        <button special="cancel" string="CANCEL"  class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

         <!-- Action product.deletion.wizard -->
        <record model="ir.actions.act_window" id="product_deletion_wizard_action">
            <field name="name">product.deletion.wizard.action</field>
            <field name="res_model">product.deletion.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('product_deletion_form_wizard')}),
                         ]"/>
        </record>

    </data>
</odoo>
